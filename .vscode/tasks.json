{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "panel": "new"
    },
    "tasks": [
        {
            "label": "Build Large Robot",
            "type": "shell",
            "command": "prosv5 make",
            "options": {
                "cwd": "${workspaceFolder}/LargeRobot"
            },
            "problemMatcher": {
                "owner": "prosv5",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/LargeRobot"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+): +(warning|error): +(.*)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Upload Large Robot",
            "type": "shell",
            "command": "prosv5 upload",
            "options": {
                "cwd": "${workspaceFolder}/LargeRobot"
            },
            "problemMatcher": {
                "owner": "prosv5",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/LargeRobot"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+): +(warning|error): +(.*)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": "build"
        },
        {
            "label": "Build Small Robot",
            "type": "shell",
            "command": "prosv5 make",
            "options": {
                "cwd": "${workspaceFolder}/SmallRobot"
            },
            "problemMatcher": {
                "owner": "prosv5",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/SmallRobot"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+): +(warning|error): +(.*)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Upload Small Robot",
            "type": "shell",
            "command": "prosv5 upload",
            "options": {
                "cwd": "${workspaceFolder}/SmallRobot"
            },
            "problemMatcher": {
                "owner": "prosv5",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/SmallRobot"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+): +(warning|error): +(.*)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": "build"
        },
        {
            "label": "Run Terminal",
            "type": "shell",
            "command": "prosv5 terminal",
            "problemMatcher": {
                "owner": "prosv5",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+): +(warning|error): +(.*)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": "build"
        },
        {
            "label": "Upload Large Robot and Run Terminal",
            "dependsOn": [
                "Upload Large Robot",
                "Run Terminal"
            ],
            "dependsOrder": "sequence",
            "group": "build",
            "problemMatcher": {
                "owner": "prosv5",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/LargeRobot"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+): +(warning|error): +(.*)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Upload Small Robot and Run Terminal",
            "dependsOn": [
                "Upload Small Robot",
                "Run Terminal"
            ],
            "dependsOrder": "sequence",
            "group": "build",
            "problemMatcher": {
                "owner": "prosv5",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/SmallRobot"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+): +(warning|error): +(.*)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Build All",
            "dependsOn": [
                "Build Small Robot",
                "Build Large Robot"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}